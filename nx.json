{
  "plugins": ["nx/plugins/package-json"],
  "affected": {
    "defaultBase": "origin/staging"
  },
  "cli": {
    "warnings": {
      "versionMismatch": true
    },
    "packageManager": "yarn",
    "analytics": false
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "generators": {
    "@nrwl/react": {
      "application": {
        "style": "styled-components",
        "linter": "eslint",
        "bundler": "vite",
        "babel": true
      },
      "component": {
        "style": "styled-components"
      },
      "library": {
        "style": "styled-components",
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@vercel/remote-nx",
      "options": {
        "cacheableOperations": ["build", "type-check", "lint"],
        "token": "<token>",
        "teamId": "<teamId>"
      }
    }
  }
}
